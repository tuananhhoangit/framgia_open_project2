<header>
  <div class="header-top">
    <div class="container">
      <div class="logo">
        <%= link_to root_path do %>
          <h1><%= t ".glob" %></h1>
        <% end %>
      </div>
      <div class="search">
        <form>
          <input type="text" placeholder="<%= t".search" %>">
          <input type="submit" value="">
        </form>
      </div>
      <div class="social">
        <ul>
          <li><%= link_to "", "#", class: "facebook" %></li>
          <li><%= link_to "", "#", class: "facebook twitter" %></li>
          <li><%= link_to "", "#", class: "facebook chrome" %></li>
          <li><%= link_to "", "#", class: "facebook in" %></li>
          <li><%= link_to "", "#", class: "facebook beh" %></li>
          <li><%= link_to "", "#", class: "facebook vem" %></li>
          <li><%= link_to "", "#", class: "facebook yout" %></li>
        </ul>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>

  <div class="head-bottom">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed"
          data-toggle="collapse" data-target="#navbar" aria-expanded="false"
          aria-controls="navbar">
          <span class="sr-only"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li class="active"><%= link_to t(".home"), root_path %></li>
          <li><%= link_to t(".users"), "#" %></li>
          <li><%= link_to t(".about"), about_path %></li>
          <li><%= link_to t(".contact"), contact_path %></li>
          <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                role="button" aria-haspopup="true" aria-expanded="false">
                <%= t ".account" %><span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(".profile"), current_user %></li>
                <li><%= link_to t(".settings"), edit_user_registration_path %></li>
                <li class="divider"></li>
                <li><%= link_to t(".logout"), destroy_user_session_path,
                  method: :delete %></li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>
