<li class="tech-no">
  <div class="soci">
    <ul>
      <li><a href="#" class="facebook-1"></a></li>
      <li><a href="#" class="facebook-1 twitter"></a></li>
      <li><a href="#" class="facebook-1 chrome"></a></li>
    </ul>
  </div>
  <div class="tc-ch post-item post-<%= post.id %>" id = "post-<%= post.id %>" post_id = "<%= post.id %>">
    <div class="tch-img">
      <%= image_tag post.picture, class: "img-responsive" %>
    </div>
    <div class="main-info">
      <h3><%= post.title %></h3>
      <p><%= post.content %></p>
    </div>
    <% if current_user == post.user %>
      <div class="dropdown action-btn">
        <i class="dropdown-toggle glyphicon glyphicon-chevron-down" data-toggle="dropdown"
          role="button" aria-haspopup="true" aria-expanded="false">
        </i>
        <div class="actions dropdown-menu">
          <%= link_to t(".delete"), post, method: :delete, class: "action delete-post" %>
          <%= content_tag :span, t(".edit"), class: "action edit-post", post_id: post.id %>
        </div>
      </div>
    <% end %>
    <div class="blog-poast-info">
      <ul>
        <li>
          <i class="glyphicon glyphicon-user"></i>
          <a class="admin" href="#"><%= post.user.name %></a>
        </li>
        <li>
          <i class="glyphicon glyphicon-calendar"></i><%= post.created_at %>
        </li>
        <li class="show-cmt">
          <i class="glyphicon glyphicon-comment"></i>
          <span class="p-blog" href="#">
            <%= post.comments.size %> <%= t ".comments" %>
          </span>
        </li>
      </ul>
    </div>
    <div class="comments">
      <ul class="display-comment">
        <%= render post.comments %>
      </ul>
      <% if user_signed_in? %>
        <div class="create-comment">
          <%= render "posts/comment_form", post: post,
            comment: post.comments.build %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="clearfix"></div>
</li>

